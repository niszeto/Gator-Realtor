<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Contact Agent</h2>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="textArea" id="message" placeholder="Message" rows="7"></textarea>
                </div>
                <button type="button" id="cancel" name="cancel" class="btn btn-danger pull-left">Cancel</button>
                <button type="button" id="sendMessage" name="sendMessage" class="btn btn-success pull-right">Send
                </button>
            </form>
        </div>
    </div>
</div>